.container{
	position: relative;
	max-width:750px;
	width:100%;
	margin:0 auto;
}
.agreement-content{
	padding:24px;
}
/* 讨论区 */
.icon{
	display: inline-block;
	background: url(../images/common.png) no-repeat;
	background-size: 250px 200px;
}
.search-icon{
	width:15px;
	height:15px;
	background-position:-4px -6px;
	position:absolute;
	top: 8px;
    right: 10px;
}
.discuss-icon{
	width:15px;
	height:15px;
	background-position:-25px -5px;
	position:relative;
	top: 2px;
}
.search-box{
	max-width: 750px;
	width:100%;
	height:30px;
	padding:10px 0px;
	background-color: #ccc;
	position: fixed;
	top:0;
	z-index: 99;
}
.search-box .search{
	width:90%;
	height:30px;
	line-height: 30px;
	background-color: #fff;
	border-radius: 4px;
	position:relative;
	margin: 0 auto;
}
.search-box .search input{
	width:85%;
	margin:0px 10px;
}
.top-list{
	background:#fff;
	margin-top:50px;
}
.top-list .list{
	margin-left:16px;
	padding:12px 16px 12px 0px;
	font-size: 1.5rem;
	color: #333333;
	border-bottom:1px solid #e6e6e6;
}
.top-list .list:last-child{
	border-bottom:none;
}
.top-list .list label{
	color:#fd5f09;
}
.bottom-list{
	background:#fff;
	margin-top:10px;
}
.bottom-list .list{
	padding:12px 16px;
	font-size: 1.5rem;
	color: #333333;
	border-bottom:1px solid #e6e6e6;
}
.bottom-list .list img.fl{
	position: relative;
}
.bottom-list .list:last-child{
	border-bottom:none;
}
.bottom-list .list .con{
	margin-left:10px;
}
.bottom-list .list p{
	margin-bottom:6px;
}
.bottom-list .list p:last-child{
	margin-bottom:0;
}
.bottom-list .list .date-discuss{
	font-size: 1.4rem;
	color: #b2b2b2;
}
#add-discuss{
	width:40px;
	height:40px;
	border-radius: 50%;
	background: #ff9705;
    position:fixed;
    bottom:40px;
    right:20px;
}
#add-discuss span{
    width:25px;
    height:25px;
    background-position:-3px -28px;
    margin:7px;
}
.detail-content{
	background:#fff;
	padding:0px 16px 16px;
	font-size: 1.6rem;
	color: #333333;
}
.detail-content .msg{
	font-size: 1.4rem;
	margin-top:16px;
	line-height: 24px;
}
.margin-0{
	margin-top:0;
	border-top:1px solid #e6e6e6;
}
.margin-top-0{
	margin-top:0;
}
.replay-box{
	max-width: 750px;
    width: 100%;
    height: 30px;
    padding: 10px 0px;
    background-color: #ccc;
    position: fixed;
    bottom: 0;
}
.replay-box input{
	width: 66%;
    height: 30px;
    padding: 0px 6px;
    border-radius: 4px;
    margin-left: 16px;
}
.replay-box .replay-icon{
	display: block;
    width: 16%;
    height: 30px;
    line-height: 30px;
    text-align: center;
    font-size: 1.2rem;
    background: #f5f5f4;
    border-radius: 4px;
    margin-right: 16px;
}
.margin-50{
	margin-bottom:50px;
}
.label-box{
	background: #fff;
	overflow: auto;
	padding:20px 16px;

}
.label-box li{
	display: block;
	float:left;
	width:72px;
	height:28px;
	border:1px solid #e6e6e6;
	line-height: 28px;
	font-size: 1.5rem;
	color: #333;
	margin-right:20px;
	border-radius:20px;
	text-align: center;
}
.label-box li span{
	width:17px;
	height:17px;
	background-position:-50px -5px;
	position: relative;
	top:4px;
	display: none;
}
.label-box li span.hover{
	display:inline-block;
}
.rease-con{
	background: #fff;
	padding:0px 16px;
	position:relative;
	padding-bottom: 60px;
}
.rease-con input:first-child{
	width: 100%;
	font-size: 1.7rem;
}
.rease-con textarea{
	border:none;
	width: 100%;
	padding-top:16px;
	height:100px;
	resize: none;
	margin:10px 0px 20px;
	border-top:1px solid #e6e6e6;
	outline:none;
}
.rease-con input:last-child{
	width:220px;
	height:30px;
	background:#ff9705;
	color: #fff;
	border-radius: 6px;
	position:absolute;
	left:0;
	right:0;
	margin:auto;
}
.part-1,.part-2,.part-3,.part-4{
	display:none;
}